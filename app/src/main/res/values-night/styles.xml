<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LinearLayoutMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/black</item>
     </style>

    <style name="TextActivitySettings">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>

        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/size_text_in_setting_activity</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextHeaderActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/search_background_edit_view</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>