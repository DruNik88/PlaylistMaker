<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search"
    style="@style/LinearLayout"
    tools:context=".SearchActivity">

    <LinearLayout
        style="@style/LinearLayoutHeader"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/back_button_search"
            style="@style/BackButton"
            android:contentDescription="@null"
            android:src="@drawable/vector_arrow_back" />

        <TextView
            style="@style/TextHeaderActivity"
            android:text="@string/search" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/search_background_edit_view">

        <ImageView
            style="@style/LoupeSearchStyle"
            android:contentDescription="@null"
            android:src="@drawable/vector_loupe_14_14" />

        <EditText
            android:id="@+id/inputEditText"
            style="@style/EditTextStyle"

            android:autofillHints="no"
            android:hint="@string/search" />

        <ImageView
            android:id="@+id/clearIcon"
            style="@style/ClearIcon"
            android:src="@drawable/vector_close_clear"
            android:contentDescription="@null"/>

    </FrameLayout>

</LinearLayout>