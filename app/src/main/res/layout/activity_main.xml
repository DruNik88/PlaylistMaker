<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cornflower_blue"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"

        android:gravity="center_vertical|start"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="@dimen/title_size" />

    <Button
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="24dp"

        android:backgroundTint="@color/white"
        android:text="@string/search"
        android:textSize="@dimen/size_text_in_main_button"
        android:textColor="@color/text_dark_blue"
        android:textAllCaps="false"

        app:icon="@drawable/vector_loupe"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/distance_icon_text"
        app:iconTint="@color/text_dark_blue"
        app:cornerRadius="@dimen/radius_big_button"/>

    <Button
        android:id="@+id/button_media_library"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_button"

        android:backgroundTint="@color/white"
        android:text="@string/media_library"
        android:textSize="@dimen/size_text_in_main_button"
        android:textColor="@color/text_dark_blue"
        android:textAllCaps="false"

        app:icon="@drawable/vector_media"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/distance_icon_text"
        app:iconTint="@color/text_dark_blue"
        app:cornerRadius="@dimen/radius_big_button" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_button"
        android:layout_marginBottom="24dp"

        android:backgroundTint="@color/white"
        android:text="@string/options"
        android:textSize="@dimen/size_text_in_main_button"
        android:textColor="@color/text_dark_blue"
        android:textAllCaps="false"

        app:icon="@drawable/vector_options"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/distance_icon_text"
        app:iconTint="@color/text_dark_blue"
        app:cornerRadius="@dimen/radius_big_button" />

</LinearLayout>
