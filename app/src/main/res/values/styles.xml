<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonActivityMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
         <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/size_text_in_main_button</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textAllCaps">false</item>
        
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/distance_icon_text</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="cornerRadius">@dimen/radius_big_button</item>
    </style>

    <style name="TextActivitySettings">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/size_text_in_setting_activity</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextHeaderActivity">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LinearLayoutMain">
        <item name="android:background">@color/yp_blue</item>
     </style>

    <style name="BackButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="LinearLayoutHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/search_background_edit_view</item>
        <item name="android:textColorHint">@color/yp_gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ClearIcon">
         <item name="android:scaleType">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TextViewTrackName">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextViewArtistName">
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/yp_gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextViewTrackTime">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">@null</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/yp_gray</item>
    </style>

    <style name="TextError">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonUpdateErrorSearch">
        <item name="android:text">@string/update</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="TextHeadHistoryFind">
        <item name="android:text">@string/you_find</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name= "ButtonClearHistory">
        <item name="android:text">@string/clear_history</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="TextCharacteristicTrackAudioPlayer">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">@color/yp_gray</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextCharacteristicTrackApiAudioPlayer">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">end|center</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextCollectionNameApiTrackAudioPlayer">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">end|center</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PlaybackProgressTrackApiAudioPlayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TextTrackNameApiAudioPlayer">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextArtistNameApiAudioPlayer">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlaybackControlBackgroundAudioPlayer">
        <item name="android:background">@color/white</item>
        <item name="android:enabled">false</item>
    </style>

    <style name= "TabLayoutStyle" parent="Widget.Material3.TabLayout">
        <item name="android:background">@null</item>
        <item name="tabTextColor">?attr/colorOnSecondary</item>
        <item name="tabIndicatorColor">?attr/colorOnSecondary</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ButtonNewPlayList">
        <item name="android:text">@string/new_playlist</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="ButtonCreateNewPlayList" parent="Widget.MaterialComponents.Button">
        <item name="android:text">@string/create</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/selector_new_playlist_create</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="TitleDescriptionNewPlaylistMiddle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/yp_blue</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TitleDescriptionNewPlaylist">
        <item name="android:background">@drawable/ic_rectangle_gray</item>
        <item name="android:fontFamily">"@font/ys_display_regular"</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>
