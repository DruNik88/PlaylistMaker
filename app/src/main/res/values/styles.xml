<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonActivityMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/size_text_in_main_button</item>
        <item name="android:textColor">@color/text_dark_blue</item>
        <item name="android:textAllCaps">false</item>
        
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/distance_icon_text</item>
        <item name="iconTint">@color/text_dark_blue</item>
        <item name="cornerRadius">@dimen/radius_big_button</item>
    </style>

    <style name="TextActivitySettings">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>

        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/size_text_in_setting_activity</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextHeaderActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">8dp</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_dark_blue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ImageActivitySettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
    </style>

    <style name="FrameLayoutActivitySettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_frame_layout_height</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/cornflower_blue</item>
     </style>

    <style name="BackButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="LinearLayoutHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/search_background_edit_view</item>
        <item name="android:textColorHint">@color/aluminium_snow</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ClearIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:scaleType">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LoupeSearchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="SearchLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:background">@drawable/search_background_edit_view</item>
    </style>

</resources>