<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonActivityMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
         <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/size_text_in_main_button</item>
        <item name="android:textColor">@color/text_dark_blue</item>
        <item name="android:textAllCaps">false</item>
        
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/distance_icon_text</item>
        <item name="iconTint">@color/text_dark_blue</item>
        <item name="cornerRadius">@dimen/radius_big_button</item>
    </style>

    <style name="TextActivitySettings">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/size_text_in_setting_activity</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextHeaderActivity">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_dark_blue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LinearLayoutMain">
        <item name="android:background">@color/cornflower_blue</item>
     </style>

    <style name="BackButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="LinearLayoutHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/search_background_edit_view</item>
        <item name="android:textColorHint">@color/aluminium_snow</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ClearIcon">
         <item name="android:scaleType">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TextVieTrackName">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextViewArtistName">
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/aluminium_snow</item>
    </style>

    <style name="TextViewTrackTime">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">@null</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/aluminium_snow</item>
    </style>

</resources>