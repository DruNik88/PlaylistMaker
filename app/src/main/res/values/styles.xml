<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonActivityMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/size_text_in_main_button</item>
        <item name="android:textColor">@color/text_dark_blue</item>
        <item name="android:textAllCaps">false</item>
        
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/distance_icon_text</item>
        <item name="iconTint">@color/text_dark_blue</item>
        <item name="cornerRadius">@dimen/radius_big_button</item>
    </style>

    <style name="TextActivitySettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>

        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/size_text_in_setting_activity</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextHeadertActivitySettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_dark_blue</item>
    </style>



    <style name="ImageActivitySettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
    </style>

    <style name="FrameLayoutActivitySettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_frame_layout_height</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/cornflower_blue</item>
     </style>

</resources>